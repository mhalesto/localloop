rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function listHasCurrentUid(listValue) {
      return listValue is list && listValue.hasAny([request.auth.uid]);
    }

    function areParticipantsValid(listValue) {
      return listValue is list
        && listValue.size() == 2
        && listValue[0] is string
        && listValue[1] is string
        && listValue.hasAny([request.auth.uid]);
    }

    function isConversationParticipant(conversation) {
      return isSignedIn()
        && conversation is map
        && conversation.participants is list
        && conversation.participants.hasAny([request.auth.uid]);
    }

    function messageSentByRequester() {
      return isSignedIn()
        && resource.data != null
        && resource.data.senderId == request.auth.uid;
    }

    match /posts/{postId} {
      allow read: if true;

      allow create: if isSignedIn()
        && request.resource.data.author.uid == request.auth.uid;

      allow update: if isSignedIn()
        && (
          resource.data.author.uid == request.auth.uid ||
          !request.resource.data.diff(resource.data).affectedKeys()
            .hasAny(['author', 'createdAt', 'clientId'])
        );

      allow delete: if isSignedIn()
        && resource.data.author.uid == request.auth.uid;

      match /comments/{commentId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update, delete: if isSignedIn()
          && resource.data.authorId == request.auth.uid;
      }

      match /presence/{clientId} {
        allow read: if true;
        allow write: if isSignedIn();
      }
    }

    match /statuses/{statusId} {
      allow read: if true;

      allow create: if isSignedIn()
        && request.resource.data.authorId == request.auth.uid;

      allow update: if isSignedIn()
        && (
          resource.data.authorId == request.auth.uid ||
          !request.resource.data.diff(resource.data).affectedKeys()
            .hasAny(['authorId', 'createdAt'])
        );

      allow delete: if isSignedIn();

      match /replies/{replyId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update, delete: if isSignedIn()
          && resource.data.authorId == request.auth.uid;
      }
    }

    match /users/{userId} {
      allow read: if true;
      allow create: if isOwner(userId);

      // Allow users to update their own profile
      allow update: if isOwner(userId);

      // Allow updating follower/following counts when following/unfollowing
      allow update: if isSignedIn()
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['followersCount', 'followingCount', 'lastPushTokenUpdate'])
        && (
          request.resource.data.followersCount == resource.data.followersCount + 1
          || request.resource.data.followersCount == resource.data.followersCount - 1
          || request.resource.data.followingCount == resource.data.followingCount + 1
          || request.resource.data.followingCount == resource.data.followingCount - 1
        );

      allow delete: if isOwner(userId);

      match /album/{photoId} {
        allow read: if true;
        allow create: if isOwner(userId)
          && request.resource.data.ownerId == request.auth.uid
          && request.resource.data.downloadUrl is string
          && request.resource.data.storagePath is string;
        allow update, delete: if isOwner(userId);
      }
    }

    match /usernames/{username} {
      allow read: if true;
      allow create: if isSignedIn()
        && request.resource.data.uid == request.auth.uid;
      allow delete: if isSignedIn()
        && resource.data.uid == request.auth.uid;
    }

    match /following/{userId}/following/{followedId} {
      allow read: if isSignedIn();
      allow create, delete: if isSignedIn() && request.auth.uid == userId;
    }

    match /followers/{userId}/followers/{followerId} {
      allow read: if isSignedIn();
      allow create, delete: if isSignedIn() && request.auth.uid == followerId;
    }

    match /publicPosts/{postId} {
      allow read: if true;
      allow create: if isSignedIn()
        && request.resource.data.authorId == request.auth.uid;
      allow update, delete: if isSignedIn()
        && resource.data.authorId == request.auth.uid;
    }

    match /directMessages/{conversationId} {
      allow read: if isConversationParticipant(resource.data);

      // Allow creating conversation if user is one of the participants
      allow create: if isSignedIn()
        && areParticipantsValid(request.resource.data.participants);

      // Allow updating conversation metadata if user is a participant
      allow update: if isSignedIn()
        && (
          // User is trying to create/update with themselves as participant
          areParticipantsValid(request.resource.data.participants)
          // OR user is already a participant (for updating lastMessagePreview, etc.)
          || isConversationParticipant(resource.data)
        );

      allow delete: if isConversationParticipant(resource.data);

      match /messages/{messageId} {
        allow read: if isSignedIn();

        // Allow creating message if sender is current user
        allow create: if isSignedIn()
          && request.resource.data.senderId == request.auth.uid
          && request.resource.data.recipientId != null
          && request.resource.data.recipientId is string
          && request.resource.data.text is string
          && request.resource.data.text.size() > 0
          && request.resource.data.text.size() <= 2000;

        allow update, delete: if messageSentByRequester();
      }
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
