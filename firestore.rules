rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    function isSignedIn() {
      return request.auth != null;
    }

    function isAdmin() {
      return isSignedIn() && request.auth.token.admin == true;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function listHasCurrentUid(listValue) {
      return listValue is list && listValue.hasAny([request.auth.uid]);
    }

    function areParticipantsValid(listValue) {
      return listValue is list
        && listValue.size() == 2
        && listValue[0] is string
        && listValue[1] is string
        && listValue.hasAny([request.auth.uid]);
    }

    function isConversationParticipant(conversation) {
      return isSignedIn()
        && conversation is map
        && conversation.participants is list
        && conversation.participants.hasAny([request.auth.uid]);
    }

    function messageSentByRequester() {
      return isSignedIn()
        && resource.data != null
        && resource.data.senderId == request.auth.uid;
    }

    function isRestrictedUserFieldChange() {
      return request.resource.data.diff(resource.data).affectedKeys().hasAny([
        'subscriptionPlan',
        'premiumUnlocked',
        'premiumExpiresAt',
        'payFastPaymentId',
        'payFastToken',
        'subscriptionStartDate',
        'subscriptionEndDate',
        'lastPaymentDate',
        'admin',
        'isAdmin'
      ]);
    }

    function isInvalidRestrictedUserCreate(data) {
      return (data.subscriptionPlan != null && data.subscriptionPlan != 'basic')
        || (data.premiumUnlocked == true)
        || (data.premiumExpiresAt != null)
        || (data.payFastPaymentId != null)
        || (data.payFastToken != null)
        || (data.subscriptionStartDate != null)
        || (data.subscriptionEndDate != null)
        || (data.lastPaymentDate != null)
        || (data.admin == true)
        || (data.isAdmin == true);
    }

    match /posts/{postId} {
      allow read: if true;

      allow create: if isSignedIn()
        && request.resource.data.author.uid == request.auth.uid;

      allow update: if isSignedIn()
        && (
          // Owner can update anything
          resource.data.author.uid == request.auth.uid ||
          // Non-owners can update reactions and poll votes
          (
            !request.resource.data.diff(resource.data).affectedKeys()
              .hasAny(['author', 'createdAt', 'clientId', 'title', 'message'])
          )
        );

      allow delete: if isSignedIn()
        && (resource.data.author.uid == request.auth.uid || isAdmin());

      match /comments/{commentId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update, delete: if isSignedIn()
          && (resource.data.authorId == request.auth.uid || isAdmin());
      }

      match /presence/{clientId} {
        allow read: if true;
        allow write: if isSignedIn();
      }
    }

    match /statuses/{statusId} {
      allow read: if true;

      allow create: if isSignedIn()
        && request.resource.data.authorId == request.auth.uid;

      allow update: if isSignedIn()
        && (
          resource.data.authorId == request.auth.uid ||
          !request.resource.data.diff(resource.data).affectedKeys()
            .hasAny(['authorId', 'createdAt'])
        );

      allow delete: if isSignedIn()
        && (resource.data.authorId == request.auth.uid || isAdmin());

      match /replies/{replyId} {
        allow read: if true;
        allow create: if isSignedIn();
        allow update, delete: if isSignedIn()
          && (resource.data.authorId == request.auth.uid || isAdmin());
      }
    }

    match /users/{userId} {
      allow read: if true;
      allow create: if isOwner(userId)
        && !isInvalidRestrictedUserCreate(request.resource.data);

      // Allow users to update their own profile
      allow update: if isOwner(userId)
        && !isRestrictedUserFieldChange();

      // Allow updating push token
      allow update: if isSignedIn()
        && request.auth.uid == userId
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['expoPushToken', 'lastPushTokenUpdate']);

      // Allow updating follower/following counts when following/unfollowing
      allow update: if isSignedIn()
        && request.resource.data.diff(resource.data).affectedKeys().hasOnly(['followersCount', 'followingCount'])
        && (
          request.resource.data.followersCount == resource.data.followersCount + 1
          || request.resource.data.followersCount == resource.data.followersCount - 1
          || request.resource.data.followingCount == resource.data.followingCount + 1
          || request.resource.data.followingCount == resource.data.followingCount - 1
        );

      allow delete: if isOwner(userId);

      match /album/{photoId} {
        allow read: if true;
        allow create: if isOwner(userId)
          && request.resource.data.ownerId == request.auth.uid
          && request.resource.data.downloadUrl is string
          && request.resource.data.storagePath is string;
        allow update, delete: if isOwner(userId);
      }
    }

    match /usernames/{username} {
      allow read: if true;
      allow create: if isSignedIn()
        && request.resource.data.uid == request.auth.uid;
      allow delete: if isSignedIn()
        && resource.data.uid == request.auth.uid;
    }

    match /following/{userId}/following/{followedId} {
      allow read: if isSignedIn();
      allow create, delete: if isSignedIn() && request.auth.uid == userId;
    }

    match /followers/{userId}/followers/{followerId} {
      allow read: if isSignedIn();
      allow create, delete: if isSignedIn() && request.auth.uid == followerId;
    }

    match /follows/{followId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn()
        && request.resource.data.followerId == request.auth.uid;
      allow update: if isSignedIn()
        && resource.data.followerId == request.auth.uid;
      allow delete: if isSignedIn()
        && resource.data.followerId == request.auth.uid;
    }

    match /publicPosts/{postId} {
      allow read: if true;
      allow create: if isSignedIn()
        && request.resource.data.authorId == request.auth.uid;

      // Allow author to update/delete everything
      // Allow anyone signed in to update votes, upvotes, downvotes, lastInteractionAt
      allow update: if isSignedIn()
        && (
          resource.data.authorId == request.auth.uid ||
          !request.resource.data.diff(resource.data).affectedKeys()
            .hasAny(['authorId', 'createdAt', 'title', 'content', 'imageUrl', 'tags'])
        );

      allow delete: if isSignedIn()
        && (resource.data.authorId == request.auth.uid || isAdmin());
    }

    match /directMessages/{conversationId} {
      allow read: if isConversationParticipant(resource.data);

      // Allow creating conversation if user is one of the participants
      allow create: if isSignedIn()
        && areParticipantsValid(request.resource.data.participants);

      // Allow updating conversation metadata if user is a participant
      allow update: if isSignedIn()
        && (
          // User is trying to create/update with themselves as participant
          areParticipantsValid(request.resource.data.participants)
          // OR user is already a participant (for updating lastMessagePreview, etc.)
          || isConversationParticipant(resource.data)
        );

      allow delete: if isConversationParticipant(resource.data);

      match /messages/{messageId} {
        allow read: if isSignedIn();

        // Allow creating message if sender is current user
        allow create: if isSignedIn()
          && request.resource.data.senderId == request.auth.uid
          && request.resource.data.recipientId != null
          && request.resource.data.recipientId is string
          && request.resource.data.text is string
          && request.resource.data.text.size() > 0
          && request.resource.data.text.size() <= 2000;

        allow update, delete: if messageSentByRequester();
      }
    }

    match /screenshotEvents/{eventId} {
      // Content owners can read their screenshot events
      allow read: if isSignedIn()
        && request.auth.uid == resource.data.contentOwnerId;

      // Anyone can create screenshot events
      allow create: if isSignedIn()
        && request.resource.data.screenshotterId == request.auth.uid;
    }

    match /notifications/{notificationId} {
      // Users can read their own notifications
      allow read: if isSignedIn()
        && request.auth.uid == resource.data.userId;

      // Anyone can create notifications
      allow create: if isSignedIn();

      // Users can update their own notifications (mark as read)
      allow update: if isSignedIn()
        && request.auth.uid == resource.data.userId;

      // Users can delete their own notifications
      allow delete: if isSignedIn()
        && request.auth.uid == resource.data.userId;
    }

    match /events/{eventId} {
      // Anyone can read public events, organizers can read their own events
      allow read: if resource.data.isPublic == true
        || (isSignedIn() && resource.data.organizerId == request.auth.uid);

      // Authenticated users can create events
      allow create: if isSignedIn()
        && request.resource.data.organizerId == request.auth.uid
        && request.resource.data.title is string
        && request.resource.data.title.size() > 0
        && request.resource.data.title.size() <= 200;

      // Organizers can update their events
      allow update: if isSignedIn()
        && resource.data.organizerId == request.auth.uid;

      // Organizers and admins can delete events
      allow delete: if isSignedIn()
        && (resource.data.organizerId == request.auth.uid || isAdmin());

      // Event RSVPs (Subcollection)
      match /rsvps/{userId} {
        // Anyone authenticated can read RSVPs
        allow read: if isSignedIn();

        // User can create their own RSVP
        allow create: if isSignedIn() && request.auth.uid == userId;

        // User can delete their own RSVP
        allow delete: if isSignedIn() && request.auth.uid == userId;

        // Organizer can update RSVPs (accept/reject)
        allow update: if isSignedIn() &&
          get(/databases/$(database)/documents/events/$(eventId)).data.organizerId == request.auth.uid;
      }
    }

    // Event Chats
    match /eventChats/{eventId} {
      // Participants and organizer can read
      // Also allow reading non-existent documents (returns null anyway)
      allow read: if isSignedIn() && (
        resource == null ||
        request.auth.uid == resource.data.organizerId ||
        request.auth.uid in resource.data.participants
      );

      // Organizer can create chat
      allow create: if isSignedIn() &&
        request.auth.uid == request.resource.data.organizerId;

      // Organizer and participants can update
      allow update: if isSignedIn() && (
        request.auth.uid == resource.data.organizerId ||
        request.auth.uid in resource.data.participants
      );

      // Organizer can delete chat
      allow delete: if isSignedIn() &&
        request.auth.uid == resource.data.organizerId;

      // Chat Messages (Subcollection)
      match /messages/{messageId} {
        // Participants can read messages
        allow read: if isSignedIn() && (
          request.auth.uid == get(/databases/$(database)/documents/eventChats/$(eventId)).data.organizerId ||
          request.auth.uid in get(/databases/$(database)/documents/eventChats/$(eventId)).data.participants
        );

        // Participants can create messages
        allow create: if isSignedIn() && (
          request.auth.uid == get(/databases/$(database)/documents/eventChats/$(eventId)).data.organizerId ||
          request.auth.uid in get(/databases/$(database)/documents/eventChats/$(eventId)).data.participants
        );

        // No one can update or delete messages
        allow update, delete: if false;
      }
    }

    match /{document=**} {
      allow read, write: if false;
    }
  }
}
