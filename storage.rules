rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    function isSignedIn() {
      return request.auth != null;
    }

    function isVoiceNoteParticipant(conversationId) {
      return isSignedIn()
        && exists(/databases/(default)/documents/directMessages/$(conversationId))
        && firestore.get(/databases/(default)/documents/directMessages/$(conversationId)).data.participants.hasAny([request.auth.uid]);
    }

    match /albums/{userId}/{photoId} {
      allow read: if true;
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // Voice notes for direct messages
    match /voiceNotes/{conversationId}/{filename} {
      allow read: if isVoiceNoteParticipant(conversationId);
      allow write: if isVoiceNoteParticipant(conversationId);
    }

    // Status images
    match /statuses/{userId}/{filename} {
      allow read: if true;
      allow write: if isSignedIn() && request.auth.uid == userId;
    }

    // Cartoon profile pictures generated by AI
    match /cartoon-profiles/{userId}/{filename} {
      allow read: if true; // Public read so profile pictures can be displayed
      allow write: if isSignedIn()
        && request.auth.uid == userId; // Only write to own folder
      allow delete: if isSignedIn() && request.auth.uid == userId; // Only delete own files
    }

    // Temporary custom images for AI cartoon generation (Gold exclusive)
    match /temp-custom-images/{userId}/{filename} {
      allow read: if isSignedIn() && request.auth.uid == userId; // Only user can read their temp images
      allow write: if isSignedIn() && request.auth.uid == userId; // Only write to own folder
      allow delete: if isSignedIn() && request.auth.uid == userId; // Only delete own files
    }

    // Profile photos uploaded by users
    match /profile-photos/{userId}/{filename} {
      allow read: if true; // Public read so profile pictures can be displayed
      allow write: if isSignedIn() && request.auth.uid == userId; // Only write to own folder
      allow delete: if isSignedIn() && request.auth.uid == userId; // Only delete own files
    }

    match /{allPaths=**} {
      allow read: if false;
      allow write: if false;
    }
  }
}
